<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jt.sys.dao.SysMenuDao">

	<!-- 查询所有菜单以及这个菜单对应的上级菜单的名字 -->
	<select id="findObjects" resultType="map">
		<!-- 方案1 select c.*,p.name parentName from sys_menus c left join sys_menus 
			p on c.parentId=p.id -->
		<!-- 方案2 -->

		select c.*,(select p.name from sys_menus p where c.parentId=p.id)
		parentName
		from sys_menus c

	</select>
	<!-- 统计菜单对象的子元素(菜单)有多少 , 假如统计结果为0,说明此菜单下没有子菜单 -->
	<select id="getChildCount" resultType="int">
		select count(*)
		from sys_menus
		where parentId=#{id}
	</select>

	<!-- 基于菜单id删除菜单自身信息 -->
	<delete id="deleteObject">
		delete
		from sys_menus
		where id=#{id}
	</delete>
	<!-- 查询菜单节点信息 -->
	<select id="findZtreeMenuNodes" resultType="com.jt.common.vo.Node">
		select id,name,parentId
		from sys_menus
	</select>

	<insert id="insertObject" parameterType="com.jt.sys.entity.SysMenu">
		insert into sys_menus
		(name,url,type,sort,note,parentId,permission,
		createdTime,modifiedTime,createdUser,modifiedUser)
		values
		(#{name},#{url},#{type},#{sort},#{note},#{parentId},#{permission},
		now(),now(),#{createdUser},#{modifiedUser})
	</insert>

	<update id="updateObject"
            parameterType="com.jt.sys.entity.SysMenu">
         update sys_menus
         set
           name=#{name},
           type=#{type},
           sort=#{sort},
           url=#{url},
           parentId=#{parentId},
           permission=#{permission},
           modifiedUser=#{modifiedUser},
           modifiedTime=now()
        where id=#{id}
    </update>
	

</mapper>
